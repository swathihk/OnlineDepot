<h1>Listing posts</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>price</th>
    <th>Image Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <% if @user_details.role_id==2 %>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?',
                        :method => :delete %></td>
         <% else %>
        <td><%= link_to "Add to Cart" ,{:action=>"cart",:id=>product.id},:remote=> true%></td>
            <td>&nbsp</td>
            <% end %>
      </tr>
  <% end %>
</table>

<br />
<% if @user_details.role_id==2 %>
<%= link_to 'New product', new_product_path %>
<%else%>
    <%= link_to "catalog(view all Product Added to cart)" ,:action=>"catalog" %>
<% end %>
<div id="cart">

