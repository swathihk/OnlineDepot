<table>
<%= form_for @user ,:url=>{:action=>"signup"} do |t| %>
    <tr><td>Username</td><td> <%= t.text_field :name%></td></tr>
      <tr><td>Password</td><td><%= t.password_field :password%></td></tr>
      <tr><td>Email</td><td><%= t.email_field :email%></td></tr>
      <tr><td>Role Type</td><td><%= t.collection_select :role_id ,Role.all,:id,:role_name%></td></tr>
      <tr><td></td><td><%= t.submit "Signup" %></td></tr>
<%end %>
</table>